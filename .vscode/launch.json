{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build Dev & Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/php/src/public",
            "preLaunchTask": "npm: build-dev",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
                "webpack:////*": "/*",
                "webpack://?:*/*": "${workspaceFolder}/*"
            },
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ],
        },
        {
            "name": "Build Prod & Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/php/src/public",
            "preLaunchTask": "npm: build-prod",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ],
        },
        {
            "name": "Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html/": "${workspaceRoot}/php/src/"
            }
        }
    ]
}
